{
  "name": "alkan-player",
  "version": "1.5.0",
  "description": "Modern müzik oynatıcı - Yerel dosyalar ve YouTube desteği",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win --mac --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:portable": "electron-builder --win portable"
  },
  "author": {
    "name": "Alkan",
    "email": "alkanarslan@me.com"
  },
  "license": "MIT",
  "build": {
    "appId": "com.alkan.player",
    "productName": "Alkan Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "ytmusic.js",
      "src/**/*",
      "node_modules/**/*",
      "downloads/"
    ],
    "asarUnpack": [
      "node_modules/ffmpeg-static/**",
      "node_modules/youtube-dl-exec/bin/**"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.music",
      "icon": "src/assets/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Audio",
      "icon": "src/assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/assets/icon.ico",
      "uninstallerIcon": "src/assets/icon.ico",
      "installerHeaderIcon": "src/assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Alkan Player"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "ffmpeg-static": "^5.3.0",
    "music-metadata": "^7.14.0",
    "node-id3": "^0.2.6",
    "youtube-dl-exec": "^2.4.0"
  }
}
